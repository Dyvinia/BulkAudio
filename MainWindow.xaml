            </Canvas>

            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Background" Value="#00000000"/>
                    <Setter Property="Foreground" Value="#FFF1F1F1"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.7"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>

        </Button>



        <Grid Margin="5,70,5,5" Background="#FF141414">
            <TextBlock Margin="25,14,503,0" TextWrapping="Wrap" Text="Input Folder" Foreground="#FFF1F1F1" FontSize="14" Height="20" FontWeight="Bold" VerticalAlignment="Top"/>
            <TextBox x:Name="txtb_inputpath" Height="20" Margin="25,35,159,0" TextWrapping="Wrap" Text="" Background="#FF141414" BorderBrush="#FF323232" Foreground="#FFF1F1F1" VerticalAlignment="Top" IsEnabled="False" VerticalScrollBarVisibility="Disabled"/>
            <Button x:Name="btn_inputselect" Content="Select..." Margin="484,35,0,0" Height="20" HorizontalAlignment="Left" Width="62" Click="btn_inputselect_Click" VerticalAlignment="Top"/>
            <Button x:Name="btn_inputopen" Content="Open" Margin="0,35,25,0" Height="20" HorizontalAlignment="Right" Width="62" Click="btn_inputopen_Click" VerticalAlignment="Top"/>

            <TextBlock Margin="25,59,503,0" TextWrapping="Wrap" Text="Output Folder" Foreground="#FFF1F1F1" FontSize="14" Height="20" FontWeight="Bold" VerticalAlignment="Top"/>
            <TextBox x:Name="txtb_outputpath" Height="20" Margin="25,80,159,0" TextWrapping="Wrap" Text="" Background="#FF141414" BorderBrush="#FF323232" Foreground="#FFF1F1F1" VerticalAlignment="Top" IsEnabled="False" VerticalScrollBarVisibility="Disabled"/>
            <Button x:Name="btn_outputselect" Content="Select..." Margin="0,80,92,0" Height="20" HorizontalAlignment="Right" Width="62" Click="btn_inputselect_Click" VerticalAlignment="Top"/>
            <Button x:Name="btn_outputopen" Content="Open" Margin="0,80,25,0" Height="20" HorizontalAlignment="Right" Width="62" Click="btn_outputopen_Click" VerticalAlignment="Top"/>

            <Separator Height="10" Margin="0,110,0,0" VerticalAlignment="Top" Background="#FF323232"/>

            <TextBlock Margin="25,124,0,0" TextWrapping="Wrap" Text="Normalize (LUFS)" Foreground="#FFF1F1F1" FontSize="14" Height="20" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Left" Width="174"/>
            <TextBox x:Name="txtb_loudness" Height="20" Margin="25,145,0,0" TextWrapping="Wrap" Background="#FF141414" BorderBrush="#FF323232" Foreground="#FFF1F1F1" VerticalAlignment="Top" PreviewTextInput="NumberValidationTextBox" PreviewKeyDown="KeyValidationTextBox" HorizontalAlignment="Left" Width="199">
                <TextBox.ToolTip>
                    <ToolTip Background="Black" Foreground="White">
                        Range: -5 to -70
                    </ToolTip>
                </TextBox.ToolTip>
            </TextBox>

            <TextBlock Margin="25,169,0,0" TextWrapping="Wrap" Text="Convert Format" Foreground="#FFF1F1F1" FontSize="14" Height="20" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Left" Width="174"/>

            <ComboBox x:Name="combo_channels" Margin="25,190,0,0" VerticalAlignment="Top" IsSynchronizedWithCurrentItem="True" SelectedIndex="0" HorizontalAlignment="Left" Width="199">
                <ComboBoxItem Content="No Change"/>
                <ComboBoxItem Content="WAV"/>
                <ComboBoxItem Content="MP3"/>
                <ComboBoxItem Content="FLAC"/>
                <ComboBoxItem Content="OGG"/>
            </ComboBox>

            <TextBlock Margin="240,124,220,0" TextWrapping="Wrap" Text="Audio Files" Foreground="#FFF1F1F1" FontSize="14" Height="20" FontWeight="Bold" VerticalAlignment="Top"/>
            <Button x:Name="btn_refresh" Margin="0,121,25,0" HorizontalAlignment="Right" Height="20" Width="20" Click="btn_refresh_Click" VerticalAlignment="Top">
                <StackPanel>
                    <Image Margin="2">
                        <Image.Source>
                            <DrawingImage>
                                <DrawingImage.Drawing>
                                    <DrawingGroup ClipGeometry="M0,0 V600 H593 V0 H0 Z">
