<Window x:Class="BulkAudio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BulkAudio"
        mc:Ignorable="d"
        MouseDown="window_MouseDown"
        Title="BulkAudio" Height="500" Width="650"
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize"
        Style="{DynamicResource CustomWindowStyle}" Icon="Resources/Icon.ico">
    <Grid>
        <Button HorizontalAlignment="Right" Margin="0,5,5,0" VerticalAlignment="Top" Width="20" Height="20" Click="btn_anal_Click">
            <Button.ToolTip>
                <ToolTip Background="Black" Foreground="White">
                    Analyse Loudness and True Peak of an audio file (LUFS &amp; dB)
                </ToolTip>
            </Button.ToolTip>
